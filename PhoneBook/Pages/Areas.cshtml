@page
@model AreasModel
@{
    ViewData["Title"] = "Районы Симферополя";
}
<h2>@ViewData["Title"]</h2>

@(Html.DevExtreme().DataGrid<PhoneBook.Models.Area>()
    .DataSource(ds => ds.Mvc()
        .Controller("Areas")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Name).Caption("Название");
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .UseIcons(true)
    )
)
